<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileUpload">




    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_horizontal"
        android:layout_width="360dp"
        android:layout_marginTop="10dp"
        android:layout_height="500dp"
        card_view:cardBackgroundColor="#FCFFFF"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        >


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:textColor="#AF1313"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Thank you for signing up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/userProfileNameUpload"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:text="Arif"
                    android:textColor="#52A4C5"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>




            <ImageView
                android:src="@drawable/ic_image"
                android:id="@+id/userImageUpload"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="250dp">

            </ImageView>



            <Button
                android:text="Upload"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/btn_bg"
                android:id="@+id/userProfileUploadBtn"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>